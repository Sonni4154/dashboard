# ===========================================
# MARIN PEST CONTROL DASHBOARD - FRONTEND
# ===========================================
# Copy this file to .env and fill in your actual values
# This file contains all environment variables needed for deployment

# ===========================================
# API CONFIGURATION (REQUIRED)
# ===========================================
# Backend API base URL
# Empty = use same domain with /api prefix (recommended for production)
# Or set to full URL like "http://localhost:5000" for development
VITE_API_BASE_URL=""

# ===========================================
# SUPABASE CONFIGURATION (REQUIRED)
# ===========================================
# Supabase project configuration for frontend
VITE_SUPABASE_URL="https://your-project.supabase.co"
VITE_SUPABASE_PUBLISHABLE_DEFAULT_KEY="your_supabase_anon_key_here"

# ===========================================
# AUTHENTICATION CONFIGURATION
# ===========================================
# Development mode flags
VITE_DEV_MODE="true"
VITE_MOCK_AUTH="true"
# Set to "false" in production

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# App name and version
VITE_APP_NAME="Marin Pest Control Dashboard"
VITE_APP_VERSION="2.0.0"

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features
VITE_ENABLE_DEBUG_MODE="true"
VITE_ENABLE_ANALYTICS="false"
VITE_ENABLE_ERROR_REPORTING="false"

# ===========================================
# QUICKBOOKS INTEGRATION
# ===========================================
# QuickBooks integration settings
VITE_QBO_ENABLED="true"
VITE_QBO_SANDBOX_MODE="true"
# Set to "false" for production QuickBooks

# ===========================================
# UI CONFIGURATION
# ===========================================
# Theme and UI settings
VITE_DEFAULT_THEME="light"
VITE_ENABLE_DARK_MODE="true"
VITE_ITEMS_PER_PAGE="50"

# ===========================================
# CACHING CONFIGURATION
# ===========================================
# TanStack Query cache settings
VITE_QUERY_STALE_TIME="300000"
# 5 minutes in milliseconds
VITE_QUERY_CACHE_TIME="600000"
# 10 minutes in milliseconds

# ===========================================
# EXTERNAL SERVICES (OPTIONAL)
# ===========================================
# Google Analytics (if enabled)
VITE_GA_TRACKING_ID=""

# Sentry error reporting (if enabled)
VITE_SENTRY_DSN=""
