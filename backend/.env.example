# ===========================================
# MARIN PEST CONTROL DASHBOARD - BACKEND
# ===========================================
# Copy this file to .env and fill in your actual values
# This file contains all environment variables needed for deployment

# ===========================================
# DATABASE CONFIGURATION (REQUIRED)
# ===========================================
# Supabase PostgreSQL connection string
DATABASE_URL="postgresql://postgres:[password]@[host]:5432/[database]?sslmode=require"

# ===========================================
# AUTHENTICATION CONFIGURATION (REQUIRED)
# ===========================================
# JWT secret for user authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"
SESSION_EXPIRES_IN="7d"

# Registration settings
REGISTRATION_ENABLED="false"

# ===========================================
# GOOGLE OAUTH CONFIGURATION (REQUIRED)
# ===========================================
# Google OAuth credentials for user authentication
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"
GOOGLE_REDIRECT_URI="https://yourdomain.com/api/auth/google/callback"

# ===========================================
# QUICKBOOKS INTEGRATION (OPTIONAL)
# ===========================================
# QuickBooks OAuth credentials
QBO_CLIENT_ID="your_quickbooks_client_id"
QBO_CLIENT_SECRET="your_quickbooks_client_secret"
QBO_REDIRECT_URI="https://yourdomain.com/api/qbo/callback"
QBO_SCOPE="com.intuit.quickbooks.accounting"

# ===========================================
# GOOGLE CALENDAR INTEGRATION (OPTIONAL)
# ===========================================
# Google AI API key
GOOGLE_AI_API_KEY="your_google_ai_api_key_here"

# Google Calendar IDs (comma-separated)
GOOGLE_CALENDAR_INSECT_CONTROL="calendar_id_here"
GOOGLE_CALENDAR_RODENT_CONTROL="calendar_id_here"
GOOGLE_CALENDAR_TERMITES="calendar_id_here"
GOOGLE_CALENDAR_TRAP_CHECK="calendar_id_here"
GOOGLE_CALENDAR_INSPECTIONS="calendar_id_here"
GOOGLE_CALENDAR_TRADEWORK="calendar_id_here"
GOOGLE_CALENDAR_INTEGRATIONS="calendar_id_here"
GOOGLE_CALENDAR_EMPLOYEE_NOTES="calendar_id_here"

# ===========================================
# AI INTEGRATIONS (OPTIONAL)
# ===========================================
# OpenAI API for GPT models
OPENAI_API_KEY="your_openai_api_key_here"

# Google AI (Gemini) API
GOOGLE_AI_API_KEY="your_google_ai_api_key_here"

# Mistral AI API
MISTRAL_API_KEY="your_mistral_api_key_here"

# ===========================================
# EXTERNAL INTEGRATIONS (OPTIONAL)
# ===========================================
# HubSpot CRM integration
HUBSPOT_ACCESS_TOKEN="your_hubspot_token_here"

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Server port (default: 5000)
PORT="5000"

# Node environment
NODE_ENV="production"

# CORS origin (frontend URL)
CORS_ORIGIN="https://yourdomain.com"

# Rate limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL="info"

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Encryption key for sensitive data
ENCRYPTION_KEY_BASE64="your_base64_encryption_key_here"

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features
SKIP_QB_TOKEN_MANAGER="false"
CRON_ENABLED="true"
